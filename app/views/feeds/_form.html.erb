<%= form_with(model: feed, local: true) do |f| %>
  <% if feed.errors.any? %>
    <div class="card">
      <h4>Erros:</h4>
      <ul>
        <% feed.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div style="display:flex;flex-direction:column;gap:0.5rem">
      <div>
        <%= f.label :name, 'Nome' %><br>
        <%= f.text_field :name, class: 'form-input' %>
      </div>
      <div>
        <%= f.label :url, 'URL' %><br>
        <%= f.text_field :url, class: 'form-input' %>
      </div>
      <div>
        <%= f.label :category, 'Categoria' %><br>
        <%= f.text_field :category, class: 'form-input' %>
      </div>
      <div>
        <%= f.submit class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>
